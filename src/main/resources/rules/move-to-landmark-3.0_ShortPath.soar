sp {apply*move*create*current-landmark-name
   (state <s> ^operator <o>)
   (<o> ^name { <name> move-to-landmark }
        ^lnd.name <landmark-name>)
-->
   (<s> ^current-landmark-name <landmark-name>)}


sp {apply*move*remove*current-landmark-name
   (state <s> ^operator <o>
              ^current-landmark-name <current-landmark-name>
              ^move-index <move-index> )
   (<o> ^name { <name> move-to-landmark }
        ^lnd.name <> <current-landmark-name>)
-->
   (<s> ^move-index <move-index> - 
                     (format (- (int  <move-index> ) (int  <move-index> ) ) ) )
                     # (format (+ (int  <move-index> ) 1 ) ))
   (<s> ^current-landmark-name <current-landmark-name> -)}  

sp {apply*move*update*move-index
   (state <s> ^operator <o>
              ^current-landmark-name <current-landmark-name>
              ^move-index <move-index>)
   (<o> ^name { <name> << move-to-landmark move-random >> }
        ^lnd.name { <landmark-name> <current-landmark-name>} )
   
-->
   (<s> ^move-index <move-index> - 
                    (format (+ (int  <move-index> ) 1 ) ) )}

