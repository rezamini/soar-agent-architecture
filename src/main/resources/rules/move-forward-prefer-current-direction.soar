
sp {propose*move-forward
    (state <s> ^io.input-link.area.view.<direction> <odr>
                ^io.output-link <ol>)
    (<odr> ^type { <type> <> block })
    
-->
    (<s> ^operator <o> + =)
    (<o> ^name move-forward
           ^direction <direction>
           ^type <type>)}

sp {apply*move-forward
    (state <s> ^operator <o>
                ^io.output-link <ol>)
    (<o> ^name move-forward
        ^direction <direction>)
-->
 (<ol> ^move.direction <direction>)}  


 sp {apply*move-forward*remove-move
   (state <s> ^io.output-link <ol>
              ^operator.name move-forward)
   (<ol> ^move <move>)
   (<move> ^status complete)
-->
   (<ol> ^move <move> -)} 

sp {apply*move-forward*create*last-direction
    (state <s> ^operator <o>)
    (<o> ^name move-forward
         ^direction <direction>)
-->
(<s> ^last-direction <direction>)}


sp {apply*move-forward*remove*last-direction
   (state <s> ^operator <o>
              ^last-direction <direction>)
   (<o> ^name move-forward
        ^direction <> <direction> )
-->
   (<s> ^last-direction <direction> -)}

